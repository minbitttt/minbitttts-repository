    <script>
        // Espera que el DOM se haya cargado completamente
        document.addEventListener("DOMContentLoaded", function() {
            // Función para cuando el mouse entra en el botón
            window.corruptPage = function () {
                document.getElementById("main-title").textContent = "why did you do this";
                document.body.style.backgroundColor = "#000";
            }

            // Función para cuando el mouse sale del botón
            window.restorePage = function () {
                document.getElementById("main-title").textContent = "Welcome To Badgeobby Oficial Website!";
                document.body.style.backgroundColor = "#111";
            }
        });
